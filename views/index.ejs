<%- include('./partials/header.ejs') %>
    <a href="/recipes/new">Add Recipe</a>
    <ul>
        <% for (i = 0; i < recipes.length; i++) { %>
            <li><a href="/recipes/<%= recipes[i].id %>"><%= recipes[i].name %></a></li>
            
            <a href="/recipes/<%= recipes[i].id %>/edit">Edit</a>

            <form action="/recipes/<%= recipes[i].id %>?_method=DELETE" method="POST">
                <input type="submit" value="Delete">
            </form>
        <% } %>
    </ul>
    
<%- include('./partials/footer.ejs') %>